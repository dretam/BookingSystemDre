@using BookingSystem.DTO.Master.BookingCodeDTO
@model InsertBCDTO

@*
    @{
        ViewData["Title"] = "Booking Code Insert Form";
    }
*@

@*
    <h1 class="text-center">@ViewData["Title"]</h1>
*@

@section breadCrumbs {
    <span>Booking Code Insert Form</span>
}

@{
    ViewData["Menu"] = "Insert Booking Code";
}

<div class="form-bread-crumb">
    <span>@ViewData["Menu"]</span>
</div>

<form method="post" asp-action="Insert" class="upsert-form">
    <table>
        <tbody>
            <tr>
                <td>Booking Code*</td>
                <td>
                    <input asp-for="BookingCode" />
                    <span asp-validation-for="BookingCode"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <input class="form-check-input" type="checkbox" id="status" asp-for="Status" value="true" checked />
                    <label class="form-check-label" for="status">
                        Status*
                    </label>
                </td>
            </tr>
        </tbody>
    </table>
    <button class="blue-button" type="submit">Submit</button>
</form>

