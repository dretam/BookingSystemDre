@using BookingSystem.DTO.Master.BookingCodeDTO
@model UpdateBCDTO

@*
    @{
        ViewData["Title"] = "Booking Code Update Form";
    }
*@

@*
    <h1 class="text-center">@ViewData["Title"]</h1>
*@

@section breadCrumbs {
    <span>Booking Code Update Form</span>
}

@{
    ViewData["Menu"] = "Update Booking Code";
}

<div class="form-bread-crumb">
    <span>@ViewData["Menu"]</span>
</div>

<form method="post" asp-action="Update" class="upsert-form">
    <table>
        <tbody>
            <tr>
                <td>Booking Code*</td>
                <td>
                    <input readonly asp-for="BookingCode" />
                    <span asp-validation-for="BookingCode"></span>
                </td>
            </tr>
            <tr>
                <td>
                    @if (Model.Status != true || Model.Status == null)
                    {
                        <input class="form-check-input" type="checkbox" id="status" asp-for="Status" />
                    }
                    else
                    {
                        <input class="form-check-input" type="checkbox" id="status" asp-for="Status" value="true" checked />
                    }
                    <label class="form-check-label" for="status">
                        Status*
                    </label>
                </td>
            </tr>
        </tbody>
    </table>
    <button class="blue-button" type="submit">Submit</button>
</form>

